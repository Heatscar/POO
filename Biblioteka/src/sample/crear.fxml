<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?> 
<?import javafx.collections.*?> 
<?import javafx.scene.text.*?>

<GridPane fx:controller="sample.CrearController"
		xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" >
	
    <Text text="Id" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="id" GridPane.rowIndex="0" GridPane.columnIndex="2" />

    <Text text="ISBN" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="isbn" GridPane.rowIndex="1" GridPane.columnIndex="2" />

    <Text text="Titulo" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="titulo" GridPane.rowIndex="2" GridPane.columnIndex="2" />

    <Text text="Autor" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="autor" GridPane.rowIndex="3" GridPane.columnIndex="2" />

    <Text text="Editorial" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="editorial" GridPane.rowIndex="4" GridPane.columnIndex="2" />

    <Text text="Edicion" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="edicion" GridPane.rowIndex="5" GridPane.columnIndex="2" />

    <Text text="Nombre" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextField fx:id="nombre" GridPane.rowIndex="6" GridPane.columnIndex="2" />

    <Text text="Direccion" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <TextField fx:id="direccion" GridPane.rowIndex="7" GridPane.columnIndex="2" />

    <Text text="Telefono" GridPane.rowIndex="8" GridPane.columnIndex="0" />
    <TextField fx:id="telefono" GridPane.rowIndex="8" GridPane.columnIndex="2" />

    <Text text="Fecha Inicial dd/mm/yyy" GridPane.rowIndex="9" GridPane.columnIndex="0" />
    <TextField fx:id="fecha_inicial" GridPane.rowIndex="9" GridPane.columnIndex="2" />

    <Text text="Fecha Final dd/mm/yyy" GridPane.rowIndex="10" GridPane.columnIndex="0" />
    <TextField fx:id="fecha_final" GridPane.rowIndex="10" GridPane.columnIndex="2" />

    <Button text="Guardar" fx:id="_save" GridPane.columnIndex="0" GridPane.rowIndex="11" onAction="#save"/>
    <Button text="Regresar" fx:id="_back" GridPane.columnIndex="1" GridPane.rowIndex="11" onAction="#back"/>
</GridPane>